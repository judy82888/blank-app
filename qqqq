import streamlit as st
import datetime
from datetime import timedelta

# ===================== Basic Care Guide Data (Dogs/Cats/Succulents) =====================
CARE_GUIDES = {
    "dog": {
        "name": "Dog",
        "feeding": "Twice a day (morning and evening), 3 times for puppies. Avoid chocolate, grapes, onions.",
        "water": "Provide clean drinking water 24/7, replace daily.",
        "exercise": "Small dogs: 1 walk (30 mins) daily; Large dogs: 2 walks (1 hour each) daily.",
        "note": "Regular deworming (monthly), avoid overfeeding to prevent obesity.",
        "emergency": "Loss of appetite: Stop treats first, observe for 24 hours, seek vet help if abnormal."
    },
    "cat": {
        "name": "Cat",
        "feeding": "Twice a day (morning and evening), mainly cat food with small amount of wet food. Avoid raw meat (for beginners).",
        "water": "Replace drinking water daily, use flowing water bowl to increase water intake.",
        "grooming": "Short-haired cats: Brush once a week; Long-haired cats: Brush 3 times a week.",
        "note": "Clean litter box daily, thoroughly wash weekly.",
        "emergency": "Loss of appetite: Stop treats, observe for 24 hours, seek vet help if vomiting/diarrhea occurs."
    },
    "succulent": {
        "name": "Succulent Plant",
        "watering": "Spring/Fall (growing season): Every 7-10 days; Summer: Every 15-20 days (avoid high temperature); Winter: Every 20-30 days (keep warm).",
        "light": "4-6 hours of scattered light daily, avoid direct strong light (shade in summer).",
        "soil": "Use special succulent granular soil (breathable to prevent root rot), lay ceramsite at pot bottom.",
        "note": "Water thoroughly only when soil is completely dry, avoid water in leaf center.",
        "emergency": "Root rot: Stop watering, keep ventilated, cut rotten roots, replace with new granular soil, replant after drying."
    }
}

# Initialize tasks (session state)
if "tasks" not in st.session_state:
    st.session_state.tasks = []

# ===================== Core Functions =====================
def add_task(task_name, care_type, frequency):
    today = datetime.date.today()
    if frequency == "Daily":
        next_due = today + timedelta(days=1)
        freq_code = "daily"
    elif frequency == "Weekly":
        next_due = today + timedelta(weeks=1)
        freq_code = "weekly"
    elif frequency == "Every 10 Days":
        next_due = today + timedelta(days=10)
        freq_code = "10days"
    else:
        return "‚ùå Invalid frequency"
    
    st.session_state.tasks.append({
        "name": task_name,
        "type": care_type,
        "frequency": freq_code,
        "frequency_show": frequency,
        "last_done": None,
        "next_due": next_due
    })
    return f"‚úÖ Task added: {task_name}, Next execution: {next_due.strftime('%Y-%m-%d')}"

def complete_task(task_index):
    try:
        task = st.session_state.tasks[task_index]
        today = datetime.date.today()
        task["last_done"] = today
        if task["frequency"] == "daily":
            task["next_due"] = today + timedelta(days=1)
        elif task["frequency"] == "weekly":
            task["next_due"] = today + timedelta(weeks=1)
        elif task["frequency"] == "10days":
            task["next_due"] = today + timedelta(days=10)
        return f"‚úÖ Task completed"
    except IndexError:
        return "‚ùå Invalid task number"

def generate_travel_list(travel_days, caregiver_name, emergency_contact):
    today = datetime.date.today()
    end_date = today + timedelta(days=travel_days)
    list_text = f"""
### üì§ Travel Care Checklist
**Period**: {today.strftime('%Y-%m-%d')} - {end_date.strftime('%Y-%m-%d')}
**Caregiver**: {caregiver_name}
**Emergency Contact**: {emergency_contact}

"""
    # Categorize tasks
    dog_tasks = [t for t in st.session_state.tasks if t["type"] == "dog"]
    cat_tasks = [t for t in st.session_state.tasks if t["type"] == "cat"]
    succulent_tasks = [t for t in st.session_state.tasks if t["type"] == "succulent"]

    # Dog section
    if dog_tasks:
        list_text += f"""
#### üê∂ Dog Care
**Basic Requirements**: {CARE_GUIDES['dog']['feeding']} | {CARE_GUIDES['dog']['water']}
**Tasks**:
"""
        for task in dog_tasks:
            list_text += f"- {task['name']}: Every {task['frequency_show']}\n"
    
    # Cat section
    if cat_tasks:
        list_text += f"""
#### üê± Cat Care
**Basic Requirements**: {CARE_GUIDES['cat']['feeding']} | {CARE_GUIDES['cat']['water']}
**Tasks**:
"""
        for task in cat_tasks:
            list_text += f"- {task['name']}: Every {task['frequency_show']}\n"
    
    # Succulent section
    if succulent_tasks:
        list_text += f"""
#### üåµ Succulent Care
**Basic Requirements**: {CARE_GUIDES['succulent']['watering']} | {CARE_GUIDES['succulent']['light']}
**Tasks**:
"""
        for task in succulent_tasks:
            list_text += f"- {task['name']}: Every {task['frequency_show']}\n"
    
    # Emergency reminder
    list_text += f"""
#### ‚ö†Ô∏è Important Reminders
1. Follow the frequency strictly to avoid over/under care
2. Contact emergency contact immediately if abnormalities occur
3. Emergency Handling:
"""
    if dog_tasks:
        list_text += f"   - Dog: {CARE_GUIDES['dog']['emergency']}\n"
    if cat_tasks:
        list_text += f"   - Cat: {CARE_GUIDES['cat']['emergency']}\n"
    if succulent_tasks:
        list_text += f"   - Succulent: {CARE_GUIDES['succulent']['emergency']}\n"

    return list_text

# ===================== Web Interface =====================
st.set_page_config(page_title="Pet & Plant Care Tool", page_icon="üåø")
st.title("üåø Pet & Plant Care Tool (Dogs/Cats/Succulents)")

with st.sidebar:
    selected = st.radio("Function Menu", ["View Care Guide", "Add Task", "To-Do Tasks", "Travel Care Checklist"])

# 1. View Care Guide
if selected == "View Care Guide":
    care_type = st.selectbox("Select Category", ["Dog", "Cat", "Succulent Plant"])
    # Map display name to code key
    key_map = {"Dog": "dog", "Cat": "cat", "Succulent Plant": "succulent"}
    key = key_map[care_type]
    guide = CARE_GUIDES[key]
    st.write(f"### {guide['name']} Care Rules")
    for k, v in guide.items():
        if k not in ["name", "emergency"]:
            st.write(f"- {k.replace('_', ' ').title()}: {v}")
    st.write(f"### Emergency Handling: {guide['emergency']}")

# 2. Add Task
elif selected == "Add Task":
    task_name = st.text_input("Task Name (e.g.: Feed the dog, Water succulents)")
    care_type = st.selectbox("Category", ["dog", "cat", "succulent"])
    # Frequency options by category
    if care_type == "succulent":
        freq = st.selectbox("Frequency", ["Daily", "Weekly", "Every 10 Days"])
    else:
        freq = st.selectbox("Frequency", ["Daily", "Weekly"])
    
    if st.button("Add Task"):
        if task_name:
            st.success(add_task(task_name, care_type, freq))
        else:
            st.error("Task name cannot be empty")

# 3. To-Do Tasks
elif selected == "To-Do Tasks":
    today = datetime.date.today()
    st.write(f"### üìÖ Today's Tasks ({today.strftime('%Y-%m-%d')})")
    today_tasks = [t for t in st.session_state.tasks if t["next_due"] == today]
    
    if today_tasks:
        for i, t in enumerate(today_tasks):
            col1, col2 = st.columns([0.8, 0.2])
            with col1:
                st.write(f"{i+1}. {t['name']} ({CARE_GUIDES[t['type']]['name']})")
            with col2:
                if st.button("Mark as Completed", key=f"done_{i}"):
                    st.success(complete_task(i))
    else:
        st.write("No tasks for today")

# 4. Travel Care Checklist
elif selected == "Travel Care Checklist":
    travel_days = st.number_input("Travel Days", min_value=1, value=7)
    caregiver = st.text_input("Caregiver Name")
    contact = st.text_input("Emergency Contact (Name + Phone)")
    
    if st.button("Generate Checklist"):
        if caregiver and contact and st.session_state.tasks:
            list_text = generate_travel_list(travel_days, caregiver, contact)
            st.markdown(list_text)
            # Download button
            today = datetime.date.today()
            st.download_button(
                label="Download Checklist",
                data=list_text,
                file_name=f"Care_Checklist_{today.strftime('%Y%m%d')}.txt",
                mime="text/plain"
            )
        else:
            st.error("Please fill in all information and add tasks first")
